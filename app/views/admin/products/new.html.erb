<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input label: "名称" %>
  </div>

  <div class="group">
    <%= f.input label: "描述" %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>
  <div class="group">
   <%= f.input :image, as: :file %>
  </div>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
